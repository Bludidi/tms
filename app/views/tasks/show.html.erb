<section>
<h1><%= @task.title %></h1>
<p><b>Description:</b> <%= @task.description %> <br> <b>Due date: </b><%= @task.due_date.in_time_zone(Time.zone).strftime('%d/%m/%y %H:%M') %> <br> <b>Status:</b> <%= @task.status%><br><b>Priority:</b> <%= @task.priority%></p>
<%= button_to "Delete task", delete_task_path(@task.user_id), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %>

</section>
